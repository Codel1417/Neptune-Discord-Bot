<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="xyz.codel1417.neptune.jpa">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:jboss/datasources/NeptuneDS</jta-data-source>
        <class>neptune.storage.entity.ProfileEntity</class>
        <class>neptune.storage.entity.GuildEntity</class>
        <class>neptune.storage.entity.LogEntity</class>
        <class>neptune.storage.entity.LogOptionsEntity</class>
        <class>neptune.storage.entity.GuildOptionsEntity</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://db/neptune"/>
            <property name="jakarta.persistence.jdbc.user" value="neptune"/>
            <property name="jakarta.persistence.jdbc.password" value="neptune"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDB103Dialect"/>
            <property name="jakarta.persistence.lock.timeout" value="30"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="c3p0.max_size" value="10"/>
            <property name="c3p0.min_size" value="1"/>
            <property name="c3p0.timeout" value="1800"/>
            <property name="c3p0.max_statements" value="50"/>
            <property name="c3p0.idle_test_period" value="300"/>
            <property name="c3p0.acquire_increment" value="1"/>
            <property name="c3p0.validate" value="true"/>
            <!--redis cache-->
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.use_query_cache" value="true"/>
            <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.redis.RedisRegionFactory"  />
            <property name="hibernate.cache.redis.use_binary_protocol" value="true"/>
            <property name="hibernate.cache.redisson.fallback" value="true"/>
            <property name="hibernate.cache.redis.host" value="redis"/>
            <property name="hibernate.cache.redis.port" value="6379"/>
            <property name="hibernate.cache.redis.database" value="0"/>
            <property name="hibernate.cache.redis.timeout" value="2000"/>
        </properties>
    </persistence-unit>
</persistence>